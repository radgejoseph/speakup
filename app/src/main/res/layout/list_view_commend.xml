<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0mm"
    app:cardMaxElevation="0mm"
    app:cardCornerRadius="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/review_view_layout"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/dark_gray"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:paddingStart="50dp"
            android:hint="Tricycle"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/body_plate"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/small_plate_box_layout"
            android:gravity="center_horizontal"
            android:hint="WMG 005"
            android:textColor="@color/bluetext"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <!--        <RatingBar-->
        <!--            android:id="@+id/ratingBar"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginEnd="5dp"-->
        <!--            android:numStars="5"-->
        <!--            android:progressTint="@color/buttonGreen"-->
        <!--            android:rating="0"-->
        <!--            android:stepSize="1.0"-->
        <!--            tools:ignore="MissingConstraints" />-->

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_plate"
            android:layout_marginTop="5dp"
            android:background="@drawable/small_plate_box_layout"
            android:hint="Date and Time"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_plate"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/small_plate_box_layout"
            android:hint="Date and Time"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Mabuotun man na maray na driver ning si kuya na nasakayan ko, pero 4 star lang ta dai maayos si mga plastick na harang"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/image_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:layout_marginTop="5dp"
            android:background="@color/graytext"
            android:hint="Image_Complaint.JPG"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>